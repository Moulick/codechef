def mul(elem):
    if elem > 0:
        return elem * 3;
    return elem * -5;


def add(arr):
    return sum(arr);


def fun(arr, k):
    arrlist = list();
    for elem in arr:
        l1 = [elem - i for i in arr];
        al = sorted(map(mul, l1))[:k];
        arrlist.append(al);
    return arrlist;


for x in xrange(int(raw_input())):
    i, k = raw_input().split();
    arr = sorted(map(int, raw_input().split()));
    out = fun(arr, int(k));
    res = min(map(add, out));
